<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventFragment">

    <TextView
        android:id="@+id/fromView"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_marginTop="25dp"
        android:background="#CACACA"
        android:gravity="center"
        android:hint="@string/from"
        android:textColor="#0B0B0B"
        android:textColorHint="#502E2E"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/toView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_Title" />

    <TextView
        android:id="@+id/toView"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="25dp"
        android:background="#CACACA"
        android:gravity="center"
        android:hint="@string/to"
        android:textColor="#0B0B0B"
        android:textColorHint="#502E2E"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fromView"
        app:layout_constraintTop_toBottomOf="@+id/time_Title" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="411dp"
        android:layout_height="48dp"
        android:layout_marginTop="88dp"
        android:background="#CACACA"
        android:gravity="center"
        android:hint="@string/year_m_d"
        android:textColor="#0B0B0B"
        android:textColorHint="#502E2E"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromView" />

    <TextView
        android:id="@+id/time_Title"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="25dp"
        android:gravity="center|start"
        android:text="@string/set_time2"
        android:textColor="#176BC1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fromView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_Title"
        android:layout_width="411dp"
        android:layout_height="44dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="21dp"
        android:gravity="center|start"
        android:text="@string/set_date1"
        android:textColor="#176BC1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dateView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromView" />

</androidx.constraintlayout.widget.ConstraintLayout>

